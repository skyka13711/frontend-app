{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "removeComments": true,
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  }
}